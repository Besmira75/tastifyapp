<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background Shape -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#EEEEEE" /> <!-- Light Gray Background -->
            <corners android:radius="8dp" /> <!-- Rounded Corners -->
        </shape>
    </item>

    <!-- Optional: Shadow Layer -->
    <item
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#DDDDDD" /> <!-- Slightly Darker Gray for Shadow -->
            <corners android:radius="8dp" />
        </shape>
    </item>

</layer-list>
